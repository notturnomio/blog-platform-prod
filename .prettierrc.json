{
  "tabWidth": 2,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "semi": true,
  "trailingComma": "none",
  "printWidth": 120,
  "jsxSingleQuote": true,
  "jsxBracketSameLine": true,
  "arrowParens": "always",
  "endOfLine": "auto",
  "offset-ternary-expressions": false,
  "no-bracket-spacing": true,
  "flattenTernaries": true
}
